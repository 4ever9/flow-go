{
  "$id": "https://www.withflow.org/cadence.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "The JSON Schema for Cadence",
  "type": "array",
  "items": {
    "oneOf": [
      {
        "$ref": "#/definitions/function"
      }
    ]
  },
  "definitions": {
    "function": {
      "title": "Function",
      "description": "A function declaration",
      "type": "object",
      "properties": {
        "$type": { "const": "function" },
        "name": {
          "title": "Function name",
          "description": "The name of the function (required)",
          "type": "string"
        },
        "parameters": {
          "title": "Function parameters",
          "description": "The parameters of the function (optional; none if not given)",
          "type": "array",
          "items": {
            "$ref": "#/definitions/parameter"
          }
        },
        "returnType": {
          "title": "Function return type",
          "description": "The return type of the function (optional; Void if not given)",
          "$ref": "#/definitions/typeAnnotation"
        }
      },
      "required": ["$type", "name"]
    },
    "parameter": {
      "title": "Parameter",
      "type": "object",
      "properties": {
        "label": {
          "title": "Function parameter argument label",
          "description": "The argument label for the function parameter (optional)",
          "type": "string"
        },
        "name": {
          "title": "Function parameter name",
          "description": "The name of the function parameter (required)",
          "type": "string"
        },
        "type": {
          "title": "Function parameter type",
          "description": "The type of the function parameter (required)",
          "$ref": "#/definitions/typeAnnotation"
        }
      },
      "required": ["name", "type"]
    },
    "typeAnnotation": {
      "oneOf": [
        {
          "$ref": "#/definitions/type"
        },
        {
          "type": "object",
          "properties": {
            "move": {
              "title": "Type annotation move indicator",
              "description": "The move annotation for the type (required)",
              "type": "boolean"
            },
            "type":  {
              "title": "Type annotation type",
              "description": "The annotated type (required)",
              "$ref": "#/definitions/type"
            }
          },
          "required": ["move", "type"]
        }
      ]
    },
    "type": {
      "title": "Type",
      "oneOf": [
        {"$ref": "#/definitions/nominalType"},
        {"$ref": "#/definitions/arrayType"}
      ]
    },
    "nominalType": {
      "title": "Nominal Type",
      "type": "string"
    },
    "arrayType": {
      "title": "Array Type",
      "type": "object",
      "properties": {
        "$type": { "const": "array" },
        "elementType": {
          "title": "Element Type",
          "description": "The type of the elements (required)",
          "$ref": "#/definitions/type"
        },
        "size": {
          "title": "Array Size",
          "description": "The size of the constant array type (optional; the array is variable-sized if the property is not given)",
          "type": "integer"
        }
      },
      "required": ["$type", "elementType"]
    },
    "dictionaryType": {
      "title": "Dictionary Type",
      "type": "object",
      "properties": {
        "$type": { "const": "dictionary" },
        "keyType": {
          "title": "Key Type",
          "description": "The key type (required)",
          "$ref": "#/definitions/type"
        },
        "valueType": {
          "title": "Element Type",
          "description": "The value type (required)",
          "$ref": "#/definitions/type"
        }
      },
      "required": ["$type", "keyType", "valueType"]
    }
  }
}
