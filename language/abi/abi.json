{
  "$id": "https://www.withflow.org/cadence.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "The JSON Schema for Cadence",
  "type": "array",
  "items": {
    "oneOf": [
      {
        "$ref": "#/definitions/function"
      }
    ]
  },
  "definitions": {
    "function": {
      "title": "Function",
      "description": "A function declaration",
      "type": "object",
      "properties": {
        "function": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Function name",
              "description": "The name of the function (required)",
              "type": "string"
            },
            "parameters": {
              "title": "Function parameters",
              "description": "The parameters of the function (optional; none if not given)",
              "type": "array",
              "items": {
                "$ref": "#/definitions/parameter"
              }
            },
            "returnType": {
              "$ref": "#/definitions/type"
            }
          },
          "required": [ "name"],
          "additionalProperties": false
        }
      },
      "required": ["function"]
    },
    "parameter": {
      "title": "Parameter",
      "type": "object",
      "properties": {
        "label": {
          "title": "Function parameter argument label",
          "description": "The argument label for the function parameter (optional)",
          "type": "string"
        },
        "name": {
          "title": "Function parameter name",
          "description": "The name of the function parameter (required)",
          "type": "string"
        },
        "type": {
          "title": "Function parameter type",
          "description": "The type of the function parameter (required)",
          "$ref": "#/definitions/type"
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },
    "variable": {
      "type": "object",
      "title": "A variable",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/type"
        }
      },
      "required": ["name"]
    },
    "type": {
      "title": "Type",
      "oneOf": [
        {
          "$ref": "#/definitions/builtinType"
        },
        {
          "$ref": "#/definitions/arrayType"
        },
        {
          "$ref": "#/definitions/optionalType"
        },
        {
          "$ref": "#/definitions/functionType"
        }
      ]
    },
    "optionalType": {
      "title": "Optional type",
      "type": "object",
      "properties": {
        "optional": {
          "$ref": "#/definitions/type"
        }
      },
      "required": ["optional"],
      "additionalProperties": false
    },
    "builtinType": {
      "title": "Builtin Type",
      "type": "string",
      "enum": [
        "String",
        "Int8",
        "Int16",
        "Int32",
        "Int64",
        "UInt16",
        "UInt32",
        "UInt64",
        "Int",
        "Address",
        "Any",
        "Bool"
      ],
      "additionalProperties": false
    },
    "arrayType": {
      "title": "Array Type",
      "type": "object",
      "properties": {
        "array": {
          "type": "object",
          "properties": {
            "of": {
              "title": "Element Type",
              "description": "The type of the elements (required)",
              "$ref": "#/definitions/type"
            },
            "size": {
              "title": "Array Size",
              "description": "The size of the constant array type (optional; the array is variable-sized if the property is not given)",
              "type": "integer"
            }
          },
          "required": [
            "of"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "array"
      ],
      "additionalProperties": false
    },
    "functionType": {
      "title": "Function type",
      "type": "object",
      "properties": {
        "function": {
          "type": "object",
          "properties": {
            "parameters" : {
              "$type": {
                "const": "array"
              },
              "items": {
                "$ref": "#/definitions/type"
              }
            },
            "returnType": {
              "$ref": "#/definitions/type"
            }
          }
        }
      },
      "required": ["function"],
      "additionalProperties": false
    },
    "dictionaryType": {
      "title": "Dictionary Type",
      "type": "object",
      "properties": {
        "$type": { "const": "dictionary" },
        "keyType": {
          "title": "Key Type",
          "description": "The key type (required)",
          "$ref": "#/definitions/type"
        },
        "valueType": {
          "title": "Element Type",
          "description": "The value type (required)",
          "$ref": "#/definitions/type"
        }
      },
      "required": ["$type", "keyType", "valueType"]
    }
  }
}
